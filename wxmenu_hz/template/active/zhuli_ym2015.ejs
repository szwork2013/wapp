            //$('#supportCount').html(n)
            //window.hasAdd = true;

        },'json')

    })




    $('#lottery_again').click(function(){
        location.reload()
    })

    $('#lottery_rule').click(function(){
        $('#myModal2').modal({
            backdrop:false
          })
    })


})





