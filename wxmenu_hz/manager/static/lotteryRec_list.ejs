<script>

 $(function () {
            window.member_type = [
              { text: "十年用户", value: 'tenyear' },
              { text: "金牌用户", value: 'gold' },
              { text: "银牌用户", value: 'silver' },
              { text: "其他用户", value: 'other' },
            ]
     
                var DataHost = window.DataHost,
                    dataSource = new kendo.data.DataSource({
                        type: "json",
                        serverPaging: true,
                        serverSorting: true,
                        batch: true,
                        pageSize: 15,
                        serverFiltering:true,
                        transport: {
                            read:  {
                                url: DataHost + "/manger/lotteryRec/read",
                                type: "post"
                            },
                            update: {
                                url: DataHost + "/manger/lotteryRec/update",
                                type: "post",
                                complete: function(e) {
                                            $("#grid").data("kendoGrid").dataSource.read(); 
                                    }
                            },
                             destroy: {
                                url: DataHost + "/manger/lotteryRec/destroy",
                                type: "post"
                            },
                            create: {
                                url:DataHost + "/manger/lotteryRec/create",
                                type: "post",
                                complete: function(e) {
                                            $("#grid").data("kendoGrid").dataSource.read(); 
                                    }
                            }
                        },
                        schema: {
                            total: "Total",
                            data: "Data",
                            model: {
                                id:"_id",
                                fields: {
                                    "_id": { editable: false },
                                    "lotteryId": { editable: true },
                                    "prizeId": { editable: true },
                                    "userId": { editable: true },
                                    "truename":{editable: true},
                                    "mobile":{editable: true},
                                    "recordIp":{editable: true},
                                    "giftId":{editable: true},
                                    "isForward":{editable: true , type: "number"},
                                    "writeTime": {editable: true, type: "date" },
                                    "code1":{editable: true},
                                    "code2":{editable: true},
                                    "code3":{editable: true},
                                    "code4":{editable: true},
                                    "appUserName":{editable: false},
                                    "appUserMobile":{editable: false},
                                }
                            }
                        }
                    });


                var toolbarAry = [];
                var commandAry = [];
 
                    var toolbarAry = [
                                { name: "create", text: "添加抽奖流水" }
                              ]

        
                    var commandAry = [
                                { name: "edit", text: {edit: "编辑", update: "确定",  cancel: "取消"} },
                                { name: "destroy", text: "删除"},
                              ]




$.post('/manger/lottery/getList',{},function(data_ary){
    var d = []
    data_ary.forEach(function(v){
        d.push({
            text: v.title, 
            value:v._id
        })
    })
    window.lotteryData = d;

        $.post('/manger/lotteryPrize/getList',{},function(data_ary){
        var d = [{
            text:'未中奖',
            value:'0',
        }]

        data_ary.forEach(function(v){
            d.push({
                text: v.name, 
                value:v._id
            })
        })

        window.lotteryPrizeData = d;
                

                $("#grid").kendoGrid({
                    dataSource: dataSource,
                    pageable: true,
                    height: 700,
                    toolbar: toolbarAry,

                    columns: [
                        {
                            field:'_id',
                            title:'商品Id',
                            hidden:true
                        },
                         { 
                            field: "lotteryId",
                            title: "所属活动",
                            values:window.lotteryData
                        },
                         { 
                            field: "prizeId",
                            title: "奖品名称",
                            values:window.lotteryPrizeData
                        },
                        { 
                            field: "userId",
                            title: "用户Id",
                            hidden:true
                        },
                        { 
                            field: "truename",
                            title: "抽奖姓名",
                        },
                        { 
                            field: "mobile",
                            title: "抽奖号码",
                        },
                        { 
                            field: "recordIp",
                            title: "抽奖IP",
                        },
                        { 
                            field: "appUserName",
                            title: "姓名",           
                        },
                        { 
                            field: "appUserMobile",
                            title: "手机",
                        },
                        { 
                            field: "giftId",
                            title: "兑奖码",
                        },
                        {
                            field: "isForward",
                            title: "转发额外记录",
                            hidden:true
                        },           
                        { 
                            field: "writeTime",
                            title: "创建日期",
                            format: "{0: yyyy-MM-dd HH:mm:ss}",
                            hidden:true
                        },
                        { 
                            field: "code1",
                            title: "是否领奖",
                            values:window.is_get_prize
                        },
                        { 
                            field: "code2",
                            title: "备用2",
                            hidden:true
                        },
                        { 
                            field: "code3",
                            title: "备用3",
                            hidden:true
                        },
                        { 
                            field: "code4",
                            title: "备用4",
                            hidden:true
                        },            

                        { command: commandAry, title: "&nbsp;", width: "160px" }],
                        filterable:window.filter_obj,
                    editable: {
                        confirmation:'确定删除吗？',
                        mode:"popup",
                        template: kendo.template($("#popup_editor").html()),
                        window : {
                                title: "添加/修改",
                                width:800,
                            }
                        },
                    edit:function(e){
                        $('.k-window-content').addClass('w-800-content');
                        $('.k-edit-form-container').addClass('w-800-content');
  
                        $('#writeTime_inp').kendoDateTimePicker();
                
                         window.dropdown_init($("#lottery_inp"), window.lotteryData)
                         window.dropdown_init($("#prize_inp"), window.lotteryPrizeData)
                         window.dropdown_init($("#code1"), window.is_get_prize)
                         window.dropdown_init($("#code2"), window.member_type)

                    }
                    
                });
        })
    })         
                                    
});










</script>
