                            title: "创建日期",
                            format: "{0: yyyy-MM-dd HH:mm:ss}"
                        },
                        { command: commandAry, title: "&nbsp;", width: "160px" }],
                    editable: {
                        confirmation:'确定删除吗？',
                        mode:"popup",
                        template: kendo.template($("#popup_editor").html()),
                        window : {
                                title: "添加/修改",
                                width:800,
                            }
                        },
                    edit:function(e){
                        $('.k-window-content').addClass('w-800-content');
                        $('.k-edit-form-container').addClass('w-800-content');

                        $('#comments_add').click(function(){
                            putTemplate();
                            return false;
                        })

                        $('#comments_save').click(function(){
                            var list = saveComment();
                            $('#comments_inp').val(JSON.stringify(list)).change();
                            alert('评论保存成功,请点击更新保存到数据库')
                            return false;
                        })

                        $('#comments_box').delegate('a[name="comments_delete"]','click',function(){
                            var that = $(this);
                            if(confirm('确定删除吗？')){
                                that.parent().remove();
                                alert('删除成功,请点击保存')
                            }                   
                            return false;
                        })

                        var templist = JSON.parse($('#comments_inp').val()||'[]')
                        putTemplate(templist)

                        $('#writeTime').kendoDateTimePicker();
                        $('#updateTime').kendoDateTimePicker();
                        $('#recCode1').kendoDateTimePicker();

                    
                        window.dropdown_init($('#appId_inp'),d)
                        window.dropdown_init($('#isCash_inp'),window.isCash_type)
                        window.dropdown_init($('#recStatus_inp'),window.recStatus_type)
                        window.dropdown_init($('#recSex_inp'),window.sex_ary)
                        window.dropdown_init($('#recRoom'),window.jieDaiList)



                    },
                    filterable:window.filter_obj         
                });
      })                              
});

