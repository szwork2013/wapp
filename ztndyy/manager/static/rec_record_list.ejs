                            title: "备用2",
                            hidden:true
                        },
                        { 
                            field: "recCode3",
                            title: "备用3",
                            hidden:true
                        },
                        { 
                            field: "recCode4",
                            title: "备用4",
                            hidden:true
                        },
                        { 
                            field: "updateTime",
                            title: "更新日期",
