<script>

window.news_type = [window.news_type[0]];
window.jieDaiList = <%- JSON.stringify(jieDaiList) %>

function downFunc(e){
    location.href = '/manger/recrecord/rec.csv'
}


function req_success(e) {
            e.preventDefault();
            var dataItem = this.dataItem($(e.currentTarget).closest("tr"));
            //console.log(dataItem)
            $.post(window.DataHost+'/manger/recrecord/success',{"_id":dataItem._id},function(d){
                if(d._id){
                    $("#grid").data("kendoGrid").dataSource.read(); 
                }   
                else{
                    alert('审核失败')
                }
            })
    }
function req_fail(e) {
            e.preventDefault();
            var dataItem = this.dataItem($(e.currentTarget).closest("tr"));
            console.log(dataItem)
            $.post(window.DataHost+'/manger/recrecord/fail',{"_id":dataItem._id},function(d){
                if(d._id){
                    $("#grid").data("kendoGrid").dataSource.read(); 
                }   
                else{
                    alert('审核失败')
                }
            })
         }


 $(function () {
    var commentTemplate =
        '<div>'+
            '<input type="text" class="k-input k-textbox" name="comments_content" value="{v}" />'+
            '&nbsp;&nbsp;<input type="text" class="k-input k-textbox" name="comments_writetime" value="{d}" />'+
            '&nbsp;&nbsp;<a class="k-button k-button-icontext k-grid-delete" name="comments_delete" href="#">'+
            '<span class="k-icon k-delete"></span>删除</a>'+
        '</div>'

    var putTemplate = function(list){
        var str = commentTemplate;
        if(list){
            var s = str
            var temps = ''
            list.forEach(function(o){
                if(!$.trim(o.content)) return;
                temps += s.replace('{v}',o.content)
                          .replace('{d}',o.date)
            })
            $('#comments_box').html(temps)
        }
        else{
            str = str.replace('{v}','')
                     .replace('{d}',moment().format("YYYY-MM-DD"))

            $('#comments_box').append(str)

        }
    }

    var saveComment = function(){

        var len =  $('input[name="comments_content"]').length;
        var array = [];
        for(var i=0;i<len;i++){
            array.push({
                content:$('input[name="comments_content"]').eq(i).val(),
                date:$('input[name="comments_writetime"]').eq(i).val(),
            })
        }
        return array;
    }


                var toolbarAry = [
                                { name: "create", text: "添加" },
                                {template: '<a class="k-button" href="\\#" onclick="return downFunc()">下载推荐列表</a>'}
                              ]
                var commandAry = [
                                //{ name: "success", text: "通过" , click:req_success},
                                //{ name: "fail", text: "不通过", click:req_fail},
                                { name: "edit", text: {edit: "编辑", update: "确定",  cancel: "取消"} },
                                { name: "destroy", text: "删除"},

                              ]
                                           
                var DataHost = window.DataHost,
                    dataSource = new kendo.data.DataSource({
                        type: "json",
                        serverPaging: true,
                        serverSorting: true,
                        batch: true,
                        pageSize: 15,
                        serverFiltering:true,
                       
                        transport: {
                            read:  {
                                url: DataHost + "/manger/recrecord/read",
                                type: "post"
                            },
                            update: {
                                url: DataHost + "/manger/recrecord/update",
                                type: "post",
                                complete: function(e) {
                                            $("#grid").data("kendoGrid").dataSource.read(); 
                                    }
                            },
                             destroy: {
                                url: DataHost + "/manger/recrecord/destroy",
                                type: "post"
                            },
                            create: {
                                url:DataHost + "/manger/recrecord/create",
                                type: "post",
                                complete: function(e) {
                                            $("#grid").data("kendoGrid").dataSource.read(); 
                                    }
                            }
                        },
                        schema: {
                            total: "Total",
                            data: "Data",
                            model: {
                                id:"_id",
                                fields: {
                                    "_id": { editable: false },
                                    "appId": { editable: true },
                                    "userId": { editable: true },
                                    "buyHouse": { editable: true },
                                    "buyRoom": { editable: true},

                                    
                                    "recName": { editable: true},
                                    "recSex": { editable: true, type:'number'},
<% if(session.admin != 'recordadmin'){ %>
                                    "recTel": { editable: true},
<% } %>
                                    "recArea": { editable: true},
                                    "recPrice": { editable: true},
                                    "recRoom": { editable: true},

                                    "recStatus": { editable: true, type:'number'},
                                    "comments":{ editable: true},

                                    "isCash": { editable: true, type:'number'},
                                    
                                    "recCode1": { editable: true, type: "date"},
                                    "recCode2": { editable: true},
                                    "recCode3": { editable: true},
                                    "recCode4": { editable: true},
                                    
                                    "updateTime": {editable: true, type: "date" },
                                    "writeTime": {editable: true, type: "date" },

                                    "userFrom":{ editable: false},
                                    "appUserName":{ editable: false},
                                    "appUserMobile":{ editable: false},
                                    "appUserBuildingRoom":{ editable: false},
                                }
                            }
                        }
                    });

                

$.post('/manger/app/getList',{},function(data_ary){
