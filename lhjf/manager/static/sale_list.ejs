<% include inc/head2 %>
<% include inc/top %>
<% include inc/left %>


<div id="grid"></div>
<script id="popup_editor" type="text/x-kendo-template">
          
            <div class="k-edit-label w-800-l">
                <label for="_id">拍品id</label>
            </div>
            <div data-container-for="_id" class="k-edit-field w-800-r"  data-bind="value:_id">
                <input type="text" id="sale_id" class="k-input k-textbox w-50-inp" name="_id" data-bind="value:_id" readonly="readonly">
            </div>


            <div class="k-edit-label  w-800-l">
                <label for="appId" >地产商</label>
            </div>
            <div data-container-for="appId" class="k-edit-field w-800-r">
               <input type="text" id="appId_inp" class="k-input k-textbox w-50-inp" name="appId" data-bind="value:appId">
            </div>

            <div class="k-edit-label  w-800-l">
                <label for="name" >拍品名</label>
            </div>
            <div data-container-for="name" class="k-edit-field w-800-r">
               <input type="text" class="k-input k-textbox w-50-inp" name="name" data-bind="value:name" required="required">
            </div>

            <div class="k-edit-label  w-800-l">
                <label for="startPrice" >起拍价</label>
            </div>
            <div data-container-for="startPrice" class="k-edit-field w-800-r">
               <input type="number" class="k-input k-textbox w-50-inp" name="startPrice" data-bind="value:startPrice" required="required">
            </div>

            <div class="k-edit-label  w-800-l">
                <label for="highPrice" >最高出价</label>
            </div>
            <div data-container-for="highPrice" class="k-edit-field w-800-r">
               <input type="number" class="k-input k-textbox w-50-inp" name="highPrice" data-bind="value:highPrice">
            </div>

            <div class="k-edit-label  w-800-l">
                <label for="highUserId" >最高出价用户id</label>
            </div>
            <div data-container-for="highUserId" class="k-edit-field w-800-r">
               <input type="text" class="k-input k-textbox w-50-inp" name="highUserId" data-bind="value:highUserId" >
            </div>
            <div class="k-edit-label  w-800-l">
                <label for="highMobile" >最高出价用户手机号</label>
            </div>
            <div data-container-for="highMobile" class="k-edit-field w-800-r">
               <input type="text" class="k-input k-textbox w-50-inp" name="highMobile" data-bind="value:highMobile" >
            </div>


            <div class="k-edit-label  w-800-l">
                <label for="startTime" >开始时间</label>
            </div>
            <div data-container-for="startTime" class="k-edit-field w-800-r">
               <input type="text" class="k-input k-textbox w-50-inp" id="startTime" name="startTime" data-bind="value:startTime" required="required">
            </div>

            <div class="k-edit-label  w-800-l">
                <label for="endTime" >结束时间</label>
            </div>
            <div data-container-for="endTime" class="k-edit-field w-800-r">
               <input type="text" class="k-input k-textbox w-50-inp" id="endTime" name="endTime" data-bind="value:endTime" required="required">
            </div>


            <div class="k-edit-label  w-800-l">
                <label for="status" >拍品状态</label>
            </div>
            <div data-container-for="status" class="k-edit-field w-800-r">
               <input type="number" id="sale_status" class="k-input k-textbox w-50-inp" name="status" data-bind="value:status" required="required">
            </div>


            <div class="k-edit-label  w-800-l">
                <label for="imgUrl">图片</label>
            </div>
            <div data-container-for="imgUrl" class="k-edit-field w-800-r">
                <input type="file" name="upload_file" id="upload_file">
                 <input type="text"  class="k-input k-textbox" style="display:none;" id="appPicture_inp" name="imgUrl" data-bind="value:imgUrl">
            </div>


            <div class="k-edit-label  w-800-l">
                <label for="desc" >商品描述</label>
            </div>
            <div data-container-for="desc" class="k-edit-field w-800-r">
               <textarea id="intro" type="text" class="k-input k-textbox w-90-inp" name="desc" data-bind="value:desc"></textarea>
            </div>


            <div style="display:none;">
                <div class="k-edit-label  w-800-l">
                    <label for="code1" >备用1</label>
                </div>
                <div data-container-for="code1" class="k-edit-field w-800-r">
                   <input type="text" id="" class="k-input k-textbox w-50-inp" name="code1" data-bind="value:code1" >
                </div>

                <div class="k-edit-label  w-800-l">
                    <label for="code2" >备用2</label>
                </div>
                <div data-container-for="code2" class="k-edit-field w-800-r">
                   <input type="text" id="" class="k-input k-textbox w-50-inp" name="code2" data-bind="value:code2" >
                </div>
            </div>

            <div class="k-edit-label  w-800-l">
                <label for="isShow">是否启用</label>
            </div>
            <div data-container-for="isShow" class="k-edit-field w-800-r">
               <input type="number" id="isShow_inp" class="k-input k-textbox" name="isShow" data-bind="value:isShow" >
            </div>

            <div class="k-edit-label  w-800-l">
                <label for="writeTime">创建日期</label>
            </div>
            <div data-container-for="writeTime" class="k-edit-field w-800-r">
               <input type="text" id="writeTime" class="k-input k-textbox " name="writeTime" data-bind="value:writeTime">
            </div>


            <div class="k-edit-label  w-800-l">
                <label for=""></label>
            </div>
            <div data-container-for="" class="k-edit-field w-800-r">
                <a onclick="javascript:sale_complete();" class="k-button k-button-icontext k-grid-ViewDetails" href="javascript:;"><span class=" "></span>确定拍出</a>
            </div>
           

        </script>


<script>

    window.news_type = [window.news_type[0]];


 $(function () {
                var toolbarAry = [
                                { name: "create", text: "添加" }
                              ]
                var commandAry = [
                                { name: "edit", text: {edit: "编辑", update: "确定",  cancel: "取消"} },
                                { name: "destroy", text: "删除"},
                              ]
                                           
                var DataHost = window.DataHost,
                    dataSource = new kendo.data.DataSource({
                        type: "json",
                        serverPaging: true,
                        serverSorting: true,
                        batch: true,
                        pageSize: 15,
                        serverFiltering:true,
                       
                        transport: {
                            read:  {
                                url: DataHost + "/manger/sale/read",
                                type: "post"
                            },
                            update: {
                                url: DataHost + "/manger/sale/update",
                                type: "post",
                                complete: function(e) {
                                            $("#grid").data("kendoGrid").dataSource.read(); 
                                    }
                            },
                             destroy: {
                                url: DataHost + "/manger/sale/destroy",
                                type: "post"
                            },
                            create: {
                                url:DataHost + "/manger/sale/create",
                                type: "post",
                                complete: function(e) {
                                            $("#grid").data("kendoGrid").dataSource.read(); 
                                    }
                            }
                        },
                        schema: {
                            total: "Total",
                            data: "Data",
                            model: {
                                id:"_id",
                                fields: {
                                    "_id": { editable: false },
                                    "appId": { editable: true },
                                    "name": { editable: true },
                                    "desc": { editable: true},
                                    "imgUrl": { editable: true },
                                    "startPrice": { editable: true,  type:'number'},
                                    "highPrice": { editable: true,  type:'number'},
                                    "highUserId": { editable: true},
                                    "highMobile":{ editable: true},
                                    "startTime": { editable: true,  type:'date'},
                                    "endTime": { editable: true,  type:'date'},
                                    "status": { editable: true,  type:'number'},
                                    "code1": { editable: true},
                                    "code2": { editable: true},
                                    "isShow": { editable: true, type:'number' },
                                    "writeTime": {editable: true, type: "date" },
                                }
                            }
                        }
                    });

                

$.post('/manger/app/getList',{},function(data_ary){
                var d = []
                data_ary.forEach(function(v){
                    d.push({
                        text: v.appName, 
                        value:v._id
                    })
                })


                $("#grid").kendoGrid({
                    dataSource: dataSource,
                    pageable: true,
                    height: 700,
                    toolbar: toolbarAry,
                    columns: [
                        {
                            field:'_id',
                            title:'商品id',
                            hidden:true
                        },
                        { 
                            field: "appId",
                            title: "地产商", 
                            values:d,
                            hidden:true
                        },
                        { 
                            field: "name",
                            title: "拍品名",
                        },
                        { 
                            field: "desc",
                            title: "描述",
                            hidden:true
                        },
                        { 
                            field: "imgUrl",
                            title: "图片",
                            template: "<img src='#=imgUrl#' width=50 height=50/>"
                        },
                        { 
                            field: "startPrice",
                            title: "起拍价",
                            hidden:true
                        },
                        { 
                            field: "highPrice",
                            title: "最高价",
                        },
                        { 
                            field: "highUserId",
                            title: "最高价用户",
                        },
                        { 
                            field: "highMobile",
                            title: "最高价手机",
                        },                       
                        { 
                            field: "startTime",
                            title: "开始时间",
                        },
                        { 
                            field: "endTime",
                            title: "结束时间",
                        },
                        { 
                            field: "status",
                            title: "竞拍状态",
                            values:window.sale_status,
                        },
                         { 
                            field: "code1",
                            title: "备用1",                           
                             hidden:true
                        },
                         { 
                            field: "code2",
                            title: "备用2",                           
                             hidden:true
                        },
                        { 
                            field: "isShow",
                            title: "是否启用", 
                            values:window.is_show_array
                        },            
                        { 
                            field: "writeTime",
                            title: "创建日期",
                            format: "{0: yyyy-MM-dd HH:mm:ss}"
                        },
                        { command: commandAry, title: "&nbsp;", width: "160px" }],
                    editable: {
                        confirmation:'确定删除吗？',
                        mode:"popup",
                        template: kendo.template($("#popup_editor").html()),
                        window : {
                                title: "添加/修改",
                                width:800,
                            }
                        },
                    edit:function(e){
                        $('.k-window-content').addClass('w-800-content');
                        $('.k-edit-form-container').addClass('w-800-content');
       
                        $('#writeTime').kendoDateTimePicker();
                        $('#startTime').kendoDateTimePicker();
                        $('#endTime').kendoDateTimePicker();

                        multiUpload($("#upload_file"), $('#appPicture_inp'), 1)
                         $("#intro").kendoEditor(window.kendo_edit_option);  
                        window.dropdown_init($('#appId_inp'),d)
                        window.dropdown_init()           
                        window.dropdown_init($('#sale_status'),window.sale_status)    

                    },
                    filterable:window.filter_obj         
                });
      })                              
});

function sale_complete(){
    var saleid = $('#sale_id').val();

    $.post('/manger/sale/complete',{'saleid':saleid},function(d){
        if(d.error == 1) return alert(d.data);
        $('.k-i-close').click()
        alert(d.data)
        $("#grid").data("kendoGrid").dataSource.read();
    },'json')

}

</script>
