$(function(){
	window.backDiv = 'main'

	$('#rules_btn').click(function(){
		$('#rules').modal()
		return false;
	})
	var loading_box = $('#loading_box')
	var loading = function(){
		loading_box.fadeIn(500)
	}
	var hideLoding = function(){
		loading_box.fadeOut(500)
	}

	var goToDiv = function(domid){
		$('#main').hide()
		$('#list').hide()
		$('#shake').hide()
		$('#votebox').hide()
		$('#front').hide()
		$('#'+domid).show()
		if(domid == 'list'){
			window.backDiv = 'main'
		}
