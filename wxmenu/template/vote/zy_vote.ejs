var chooseItemFunc = function(lvType, itemId, isAdd){
    var itemList = window.chooseItem[lvType]
    if(!Array.isArray(itemList)) return false

    if(isAdd){
        var limitLength = 0
        if(lvType == 'lv0'){
            limitLength = 1
        }
        else if(lvType == 'lv1'){
            limitLength = 2
        }
        else if(lvType == 'lv2'){
            limitLength = 3
        }
        else if(lvType == 'lv3'){
            limitLength = 6
        }
        else if(lvType == 'lv4'){
            limitLength = 3
        }

        if(itemList.length >= limitLength){
            return false
        }
        itemList.push(itemId)
        window.chooseItem[lvType] = itemList
        $('#choose_count').html(itemList.length)
        $('#'+lvType+'_choose_count').html(itemList.length)
        return true
    }else{

        var newList = []
        itemList.forEach(function(objId){
            if(objId != itemId){
                newList.push(objId)
            }
        })
        window.chooseItem[lvType] = newList
        $('#choose_count').html(newList.length)
        $('#'+lvType+'_choose_count').html(newList.length)
        return true

    }

}




