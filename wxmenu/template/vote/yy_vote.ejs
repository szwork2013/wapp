//遮照功能


var init = function(){
    
    
    var oLabelLi=$(".labelBox ul li");
    $(".actCont:gt(0)").hide();
    oLabelLi.click(function(){
        $(this).addClass("active").siblings().removeClass("active");
        $(".actCont").eq(oLabelLi.index(this)).show().siblings().hide();
        setTimeout(function(){
                    $(window).trigger('scroll')
            },100)
    })
    oLabelLi.last().css('border','none');
    
    // var oTop=window.screen.height-60;
    // var oBottom=$(".bottom");
    // oBottom.css('top',oTop+'px')
}



var initAjax = function(){

    $('#join_btn, #join_btn2').click(function(){
        $('#myModal').modal({
                backdrop:true
        })
    })

    //第三选项卡
    window.myItem = {}
    $.get('/vote/<%= appEname %>/myitem', {
        'userId':'<%=  userid %>',
        'groupEname':'child',
    }, function(d){
        if(d.error){
            return alert(d.data)
        }
        window.myItem.child = d.data[0]

         $.get('/vote/<%= appEname %>/myitem', {
                'userId':'<%=  userid %>',
                'groupEname':'adult',
            }, function(d){
                if(d.error){
                    return alert(d.data)
                }
                window.myItem.adult = d.data[0]
                var temps = ''
                var hasItem = 0
                if(window.myItem.adult){
                    if(window.myItem.adult.isShow == 1){
                        var type = '已审核'
                    }
                    else{
                        var type = '待审核'
                    }
                    hasItem++;
                    temps += '<li>编号: '+window.myItem.adult.code2+'  |  我是摄影师  |  '+type+'<div class="img_block">'+
                             '<img src="'+window.myItem.adult.pictureThumb+'" width="100%" />'
                             '<a href="javascript:;" class="ilike">'+window.myItem.adult.todayVoteNumber+'</a></div>'
                             '<h3>'+window.myItem.adult.title+'</h3></li>'
                }
                if(window.myItem.child){
                    if(window.myItem.child.isShow == 1){
                        var type = '已审核'
                    }
                    else{
                        var type = '待审核'
                    }
                    hasItem++;
                    temps += '<li>编号:'+window.myItem.child.code2+'  |  小小摄影家  |  '+type+'<div class="img_block">'+
                             '<img src="'+window.myItem.child.pictureThumb+'" width="100%" />'
                             '<a href="javascript:;" class="ilike">'+window.myItem.child.todayVoteNumber+'</a></div>'
                             '<h3>'+window.myItem.child.title+'</h3></li>'
                }

                if(temps==''){
                    $('#mymain').html('<div class="no_upload">您还未上传作品</div>').show()
                }
                else{
                    $('#myItem').html(temps)
                }

                

                if(hasItem == 0){
                    $('#active').show()
                }
                else if(hasItem == 1){
                    $('#active').show()
                    $('#mymain').show()
                }
                else{
                    $('#mymain').show()
                }

        },'json')
    }, 'json')

    
    //获取投票信息
    window.child_group_id = ''
    window.adult_group_id = ''
    groupList.forEach(function(item){
        if(item.ename == 'adult'){
            window.adult_group_id = item._id
        }
        if(item.ename == 'child'){
            window.child_group_id = item._id
        }
    })


    window.ajaxVote = false
    var bindEvent = function(){
        $('#main').delegate('a[name="ilike"]', 'click', function(){
                if(window.ajaxVote) return false;
                var that = $(this)
                var total = that.attr('total') - 0 || 0
                var q = {
                    'itemid':that.attr('itemid')
                }
                window.ajaxVote = true
                $.post('/vote/'+appEname+'/start', q, function(d){
                        window.ajaxVote = false
                        if(d.error == 1){
                            //return alert(d.data);
                        }
                        else{
                            that.html(++total)
                            //alert('投票成功')
                        }
                })
        })

        window.skip = 0
        $('#change_btn').click(function(){
            genWaterFull(window.skip)
            window.skip += 25
        })


    }();


    var $waterL = $('#waterL')
    var $waterR = $('#waterR')

    //生成瀑布流
    var genWaterFull = function(skip){
                
                if(!skip){
                    var skip = 0
                }
                 //生成瀑布流
                //分别获取成人和幼儿组的数据
                $.get('/vote/<%= appEname %>/items',{
                    'groupid':window.child_group_id,
                    'ename':voteEname,
                    'sorttype':2,
                    'skip':skip,
                    'limit':25
                }, function(d){
                    if(d.error){
                        return alert(d.data)
                    }
                    window.itemList = d.data

                     $.get('/vote/<%= appEname %>/items',{
                        'groupid':window.adult_group_id,
                        'ename':voteEname,
                        'sorttype':2,
                        'skip':skip,
                        'limit':25
                    }, function(d){
                        if(d.error){
                            return alert(d.data)
                        }
                        window.itemList = window.itemList.concat(d.data)

                        if(window.itemList.length == 0){
                            alert('对不起，没有其他作品了')
                            return
                        }
                        

                        window.itemList.sort(function(a,b){
                            var aTime = moment(a.writeTime)
                            var bTime = moment(b.writeTime)
                            if(aTime >= bTime){
                                return -1
                            }
                            else return 1
                        })

                        var temps = ''
                        $waterL.empty()
                        $waterR.empty()
                        
                        window.itemList.forEach(function(item){
                            var temps = '<div class="img_block">'+
                                     '<a data-title="'+item.desc+'" data-lightbox="image-1"  href="'+item.pictureThumb+'">'+
                                     '<img data-title="'+item.desc+'" class="lazy" src="'+item.pictureThumb+'" width="250"  /></a>'+
                                     '<a total="'+item.todayVoteNumber+'" groupid="'+item.groupId+'" itemid="'+item._id+'" href="javascript:;" name="ilike" class="ilike">'+item.todayVoteNumber+'</a>'+
                                     '<h3>'+item.desc+'</h3></div>'
                            var lh = $waterL.height()
                            var rh = $waterR.height()
                            if(lh > rh){
                                $waterR.append(temps)
                            }
                            else{
                                $waterL.append(temps)
                            }

                        })
                        
                        $('#change_btn').show()
                        $('#join_btn2').show()

                                           
                    }, 'json')

                }, 'json')
    }


    genWaterFull()
    window.skip += 25
   
}



 $(function(){  
    init()
    initAjax()
});









</script>

